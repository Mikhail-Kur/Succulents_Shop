@model succus_shop.Models.ChangeRoleViewModel
@{
    ViewData["Title"] = "Роли";
    Layout = "~/Views/_Layout.cshtml";
}
<form asp-action="Edit" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="User.Id" />
    </div>
    <div class="form-group">
        <label asp-for="User.Email" class="control-label">Email</label>
        <input type="text" asp-for="User.Email" class="form-control" />
    </div>
    <input type="hidden" name="userId" value="@Model.User.Id" />
    <div class="form-group">
        @foreach (var role in ViewBag.Roles)
         {
        <div>
            <input type="checkbox" name="roles" value="@role.Name"asp-for="User.Role" />@role.Name <br />
                <input asp-for="User.RoleId" type="hidden" name="RoleId" value="@role.Id" />
                <span>@role.Name</span> <br />
            </div>

         }
    </div>
    <button type="submit" asp-action="Edit">
        Сохранить
    </button>
</form>