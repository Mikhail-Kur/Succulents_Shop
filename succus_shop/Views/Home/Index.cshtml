@model List<succus_shop.Models.SuccuModel>
@{ 

    ViewData["Title"] = "home page";

}
<div>
    <h1>
        Каталог
    </h1>
    @foreach (var succus in Model)
    {
        <div>
            <h3>
               @succus.Species
               @succus.Name
            </h3>
            <p>
                @succus.Description
            </p>

            @if (succus.IsAvialible)
	         {
	                <button class="btn bnt-primary"> подробнее </button>	
	         }
        </div>
    }

</div>